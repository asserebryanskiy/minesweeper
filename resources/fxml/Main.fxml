<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<VBox fx:controller="AndreySerebryanskiy.minesweeper.Controller"
      stylesheets="/css/style.css"
      xmlns:fx="http://javafx.com/fxml" alignment="center" spacing="20">
    <padding>
        <Insets>
            <top>10</top>
            <bottom>10</bottom>
            <left>10</left>
            <right>10</right>
        </Insets>
    </padding>

    <Label text="Выбери размер карты">
        <VBox.margin>
            <Insets>
                <top>10</top>
            </Insets>
        </VBox.margin>
    </Label>

    <Button text="Маленькая"
    prefHeight = "20"
    prefWidth = "120"
    onAction="#handleSetSmallScene"/>

    <Button text="Средняя"
    prefHeight = "20"
    prefWidth = "120"
    onAction="#handleSetMiddleScene"/>

    <Button
    text="Большая"
    prefHeight = "20"
    prefWidth = "120"
    onAction="#handleSetLargeScene">
        <VBox.margin>
            <Insets>
                <bottom>20</bottom>
            </Insets>
        </VBox.margin>
    </Button>


</VBox>