<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<VBox fx:controller="AndreySerebryanskiy.minesweeper.MainController"
      stylesheets="/css/style.css"
      xmlns:fx="http://javafx.com/fxml" alignment="center" spacing="20"
      fx:id="mainMenu">
    <padding>
        <Insets>
            <top>10</top>
            <bottom>10</bottom>
            <left>10</left>
            <right>10</right>
        </Insets>
    </padding>

    <Label text="Choose field size">
        <VBox.margin>
            <Insets>
                <top>10</top>
            </Insets>
        </VBox.margin>
    </Label>

    <Button fx:id="smallButton"
            text="Small"
    prefHeight = "20"
    prefWidth = "120"
    onAction="#handleSetSmallScene"/>

    <Button fx:id="medium"
            text="Medium"
    prefHeight = "20"
    prefWidth = "120"
    onAction="#handleSetMiddleScene"/>

    <Button fx:id="large"
    text="Large"
    prefHeight = "20"
    prefWidth = "120"
    onAction="#handleSetLargeScene">
        <VBox.margin>
            <Insets>
                <bottom>20</bottom>
            </Insets>
        </VBox.margin>
    </Button>


</VBox>